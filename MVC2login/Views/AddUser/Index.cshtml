@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table>
    <tr>
        <th>User Name</th>
        <th>PWD</th>
        <th>Telephone</th>
        <th>Town</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td><a href="@Url.Action("Update","AddUser",new { @id = Model.Rows[i][0] })">Upadate</a>
                <a href="@Url.Action("Delete","AddUser",new { @id = Model.Rows[i][0] })">Delete</a>
            </td>
        </tr>
    }
</table>
<a href="@Url.Action("Insert", "AddUser")">Add User</a>